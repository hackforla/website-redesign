include /_mixins/_social-list.pug

block globalsVars
  -
    const siteName = 'Hack for L.A.';
    const siteUrl = 'http://http://www.hackforla.org/';
    const themeColor = '#2F3BA2';
    const socialLinks = {
      'Facebook': 'https://www.facebook.com/hackforla',
      'Twitter': 'https://twitter.com/HackForLA',
      'YouTube': null,
      'Instagram': null
    };

block canonicalUrl
  - const canonicalUrl = siteUrl;

block metaVars
  -
    const meta = {
      pageTitle: 'Hack for L.A.',
      description: 'Hack for LA is the home for the civic hacking and civic technology movement in Los Angeles.',
      image: 'http://d3n8a8pro7vhmx.cloudfront.net/hackforla/sites/1/meta_images/original/hack-la-small.png?1378774756'
    };

block bodyClass
  - const bodyClass = ''

doctype html
html(language='en')
  include /_includes/_html-header.pug

  body(class=bodyClass).scroll-top
    a(href='#content')#skip-link.sr-only-focusable Skip to main content.
    #svg-sprites.svg-sprites
      include /_includes/svg-sprites.svg
    include /_includes/_header.pug
    .page-wrapper
      block precontent
      main#content.main-content
        block content
      include /_includes/_footer.pug
    block postcontent

